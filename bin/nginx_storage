rootpath = "/mnt/usbdrive/nginx"

docker run \
-v $rootpath/logs:/var/log/nginx:ro \
-v $rootpath/certs:/etc/nginx/certs:ro \
-v $rootpath/conf:/etc/nginx/conf:ro \
-v $rootpath/sites-enabled:/etc/nginx/sites-enabled:ro \
-v $rootpath/nginx.conf:/etc/nginx/nginx.conf:ro \
-v $rootpath/html:/usr/share/nginx/html:ro \
-v $rootpath/html:/usr/share/nginx/html:ro \
--name=nginx-storage \
armv7/armhf-ubuntu
